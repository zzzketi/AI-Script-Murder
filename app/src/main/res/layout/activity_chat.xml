<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:popupTheme="@style/ToolbarPopupTheme"
        android:elevation="12dp"

        android:outlineSpotShadowColor="#40263238"
        android:outlineAmbientShadowColor="#40263238"

        app:layout_constraintTop_toTopOf="parent"
        app:title=""
        app:subtitle=""
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvScriptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剧本名称"
                android:textColor="#263238"
                android:textSize="17sp"
                android:textStyle="bold"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvChapterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHAPTER 1 · 第一章"
                android:textColor="#90A4AE"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingBottom="80dp"
        android:clipToPadding="false"



        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/layoutInput"
        app:layout_constraintVertical_bias="1.0"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNextStage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="进入下一章  ›"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        app:backgroundTint="#37474F"
        app:cornerRadius="24dp"
        app:elevation="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/layoutInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_input_container"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:elevation="16dp"
        android:outlineSpotShadowColor="#20000000"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/btnReadScript"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/menu_book"
            app:tint="#546E7A"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="阅读剧本" />

        <EditText
            android:id="@+id/etInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_input_field"
            android:hint="输入..."
            android:textColor="#263238"
            android:textColorHint="#90A4AE"
            android:textSize="15sp"
            android:minHeight="44dp"
            android:maxLines="4"
            android:paddingHorizontal="16dp"
            android:paddingVertical="10dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintStart_toEndOf="@id/btnReadScript"
            app:layout_constraintEnd_toStartOf="@id/btnSend"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btnSend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            app:tint="#37474F"
            android:padding="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="#37474F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>