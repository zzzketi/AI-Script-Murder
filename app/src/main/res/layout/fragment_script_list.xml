<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ui.scriptlist.ScriptListFragment">
    <!-- 背景修改为：#F5F5F5 (浅灰白) -->

    <!-- 1. 顶部标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#333333" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧本"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/btn_latest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="高分榜"
            android:textSize="12sp"
            android:textColor="#121112"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_latest"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

    <!-- 2. 搜索框区域 -->
    <LinearLayout
        android:id="@+id/ll_search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_search_bar"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/ic_menu_search"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                app:tint="#999999"/>

            <!-- 将TextView替换为EditText -->
            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="搜索剧本..."
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 3. 列表区域 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_script_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="80dp"
        tools:listitem="@layout/item_script" />



</LinearLayout>
